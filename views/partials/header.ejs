<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Myfiche.fr</title>

    <!-- Google Font & FontAwesome -->
    <link href="https://fonts.googleapis.com/css?family=Raleway|Patua+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../myfiche/css/bootstrap.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.10.1/css/mdb.min.css" rel="stylesheet">
 
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../myfiche/css/style.css">


</head>
<body>



  <!-- Naviguation bar fixed to the top -->
  <section>
      <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNavbar">
        <a class="navbar-brand px-5" href="/"><img src="/myfiche/img/home/logo.png" style="height:4rem;"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/fiches"><i class="fas fa-scroll mr-2"></i>Fiches<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item inactive" style="opacity:0.2">
              <a class="nav-link" href="#"><i class="fas fa-question-circle mr-2"></i>Quiz</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/pannel/myFiches"><i class="fas fa-palette mr-2"></i>Création</a>
            </li>
          </ul>

          <ul class="navbar-nav mr-auto">

          <% if (!user) { %>

            <li class="nav-item active">
              <a class="nav-link" href="/login"><i class="fas fa-user mr-2"></i>Connexion<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register"><i class="fas fa-user-plus mr-2"></i>Inscription</a>
            </li>

          <% } else { %>

            <li class="nav-item">
              <a class="nav-link" href="/pannel"><i class="fas fa-user-plus mr-2"></i>Connecté en tant que <%= user.username %></a>
            </li>

          <%  } %>

          </ul>

        </div>
      </nav>
  </section>



