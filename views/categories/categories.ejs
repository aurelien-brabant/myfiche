<%- include("../partials/header") %>

<div id="categoriesBgImg">

<div class="container-fluid px-0 d-flex flex-column align-items-center" id="categoriesContainer">

  <div class="jumbotron text-center pb-1 pt-4 m-0 w-100">

    <span>
      <h2>
        <i class="fas fa-angle-double-right mx-3 mx-lg-5"></i>
        Catégories
        <i class="fas fa-angle-double-left mx-3 mx-lg-5"></i>
      </h2>
    </span>

    <h5>
      Choisissez la catégorie qui vous intéresse.
    </h5>

    <small>
    Astuce : cliquez sur la flèche vers le bas pour voir les fiches récemment sorties dans cette catégorie.
    </small>

    <div class="active-cyan-4 d-flex justify-content-center w-100 my-3">
      <input class="form-control w-25" type="text" placeholder="Rechercher" aria-label="Search" id="searchCategory">
    </div>

    <p class="mt-4">
      <i class="fas fa-question mr-2"></i>
      <a href="#">Plus d'informations sur le fonctionnement par catégorie</a>
    </p>

  </div>

  <!-- End of jumbotron -->

  <div class="d-flex flex-column w-100 align-items-center ">
  <% for (category of categories) {  %>

  <!-- Start of "<%=category.title%>" category -->

  <div class="category p-3 mx-3 mt-3 mb-0 justify-content-center col-12 col-md-8 col-lg-6 rounded-top" id="<%=category._id%>">

    <div class="d-flex flex-column w-100">

    <div class="d-flex w-100">

      <div class="d-flex flex-column col-11 text-center align-items-center">
        <h4 class="border-bottom text-uppercase categoryTitle">
          <%=category.title%>
        </h4>

        <h5>
          <%= category.fiches.length %> fiche<% if (category.fiches.length > 1) { %>s<%}%> <i class="fas fa-scroll"></i>
        </h5>

  <div class="text-center flex-column best-rated border-top" id="dd_<%=category._id%>">
    <h5 class="mt-4">
      <i class="fas fa-star"></i>
      Fiches les mieux notées
      <i class="fas fa-star"></i>
    </h5>

    <% category.fiches.forEach(function(fiche, index){ if (index < 5) { %>
    <span class="px-3 d-block m-3 best-rated-item" id="<%= fiche._id %>"><i class="fas fa-arrow-right mr-2"></i><%=fiche.publishedContent.title%> - Recommandée à 90%</span>
    <% }}); %>
    <span><a href="/categories/<%=category._id%>/fiches" class="text-dark"> Voir plus de fiches...</a></span>
  </div>

      </div>

      <!-- category dropdown -->

      <div class="d-flex justify-content-center align-items-center col-1 border rounded-top categoryDropdownIcon animated-to-down" id="tdd_<%=category._id%>">
        <i class="fas fa-chevron-down"></i>
      </div>

    </div>


  </div>

  </div>





  <!-- End of <%=category.title%> category -->



  <% } %>
</div>


<!-- End of categories wrapper -->

</div>

</div>



<%- include("../partials/footer") %>
<script type="text/javascript" src="/myfiche/js/categories.js"></script>
