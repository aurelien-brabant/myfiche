<%- include('partials/header.ejs') %>


<div class="content" style="background-image:url('/myfiche/img/home/fiches.png'); background-color: rgba(0, 100, 255, 0.7);">

    <!-- General container -->
    <div class="container-fluid d-flex flex-column align-items-center">

        <!-- HEADER - Link to create a fiche -->

        <div class="text-center my-3 bg-white w-75 p-3 border rounded">

            <h1 class="">
                <i class="nc-icon nc-paper-2 mx-1"></i>
                Mes fiches
                <i class="nc-icon nc-paper-2 mx-1"></i>
            </h1>
                <a href="/fiches/new" class="btn btn-lg btn-success">
                Créer une fiche
                </a>

        </div>

        <!-- Fiche List -->

        <% fiches.forEach(function(fiche) {

            if (fiche.author.username === user.username)
            {
         %>

        <div class="row">

            <!-- Card taking all the width of the row -->

            <div class="col-md-12">

                <!-- Fiche card -->

                <div class="card" id="<%= fiche._id %>">

                    <div class="card-body text-center pb-5 d-flex flex-column flex-lg-row">

                        <!-- Image -->

                        <div class="col-12 col-lg-4">
                            <img src="<%= fiche.publishedContent.image %>" class="img-fluid" style="max-height: 300px">
                        </div>

                        <!-- Textual Content and stats -->

                        <div class="col-12 col-lg-5 text-left border">

                            <div class="d-flex flex-column py-2 justify-content-center align-items-center">

                                <!-- Textual Content -->

                                <div class="col-12">

                                    <h3>
                                    Informations
                                    </h3>

                                    <p>
                                    Titre : <%= fiche.publishedContent.title %>
                                    </p>

                                    <p>
                                    Description : <%= fiche.publishedContent.description %>
                                    </p>

                                    <p>Contenu (aperçu) : <%= fiche.publishedContent.content.substring(0, 150) %>... <a href="">Voir plus</a>
                                    </p>

                                </div>    

                                <!-- Stats -->

                                <div class="col-12 d-flex justify-content-center">

                                    <a class="btn btn-success mx-2">
                                        <%= fiche.rating.up %> <i class="nc-icon nc-stre-up mx-1"></i>
                                    </a>    

                                    <a class="btn btn-danger mx-2">
                                        <%= fiche.rating.down %> <i class="nc-icon nc-stre-down mx-1"></i>
                                    </a>

                                    <a class="btn btn-warning mx-2">
                                        <%= Math.round((fiche.rating.up / (fiche.rating.up + fiche.rating.down)) * 100) %>%<i class="nc-icon nc-bulb-63 mx-1"></i>
                                    </a>     

                                    <a class="btn btn-info mx-2">
                                        1034<i class="nc-icon nc-tap-01 mx-1"></i>
                                    </a>

                                </div>

                                <!-- See published version (if it exists) -->
                                <div class="col-12">

                                    <a href=""class="btn btn-secondary mx-2 my-2 col-12">
                                        Voir la fiche publique<i class="nc-icon nc-stre-right mx-1"></i>
                                    </a>

                                </div>

                            </div>

                        </div>

                        <!-- End of textual and stats content -->

                        <!-- Options -->

                        <div class="col-12 col-lg-3 d-flex flex-column">

                            <h4>
                            Options
                            </h4>

                            <div class="d-flex align-items-center justify-content-center my-2">

                                <span class="mr-2">Visible :</span>

                                <% 
                                var iconClasses = undefined;
                                var btnClasses = undefined;

                                if (fiche.visibility.hidden) 
                                {
                                    iconClasses = "nc-icon nc-simple-remove";
                                    btnClasses = "btn-danger";
                                }
                                else if (!fiche.visibility.hidden)
                                {
                                    iconClasses = "nc-icon nc-check-2";
                                    btnClasses = "btn-success";
                                }
                                %>


                                <a href="/fiches/<%=fiche._id%>/toggleHide?from=myFiches" class="btn <%=btnClasses%> mx-1">
                                    <i class="<%= iconClasses %> mx-1"></i>
                                </a>

                            </div> 

                            <button data-toggle="modal" data-target="#editMod_<%=fiche._id%>" class="btn btn-warning my-1">
                                Editer
                            </button>

                            <!-- Edit type modal -->
                            <div class="modal fade" tabindex="-1" role="dialog" id="editMod_<%=fiche._id%>" data-backdrop="false">

                              <div class="modal-dialog" role="document">

                                <div class="modal-content">

                                  <div class="modal-header">

                                    <h5 class="modal-title">Choisissez votre type d'édition</h5>

                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>

                                  </div>

                                  <!-- Modal content -->

                                  <div class="modal-body">

                                    <!-- Edit option 1 -->
                                    <div class="border my-2 rounded bg-light">
                                        <a href="/pannel/editor?edit=<%=fiche._id%>" class="text-dark">
                                        <h4>Editer à partir de la dernière sauvegarde intelligente</h4>
                                        <small>L'éditeur garde une trace de vos derniers changements même si vous n'avez rien publié.</small>
                                        <h6 class="py-2">Dernière sauvegarde le <%=
                                        fiche.currentSave.last.toLocaleDateString('fr-CA', { year: 'numeric', month: 'numeric', day: 'numeric', hour:'numeric', minute:'numeric'})%></h6>
                                        </a>
                                    </div>

                                    <!-- Edit option2 - disabled -->

                                    <div class="border my-2 rounded bg-light d-flex flex-column align-items-center" style="opacity:0.5">

                                        <h4>Charger un brouillon spécifique</h4>
                                        <span class="badge badge-danger w-50 h-25">Indisponible</span>
                                        <small class="p-2">Naviguez parmi votre liste de brouillons, puis sélectionnez celui qui vous intéresse. Vous pourrez l'éditer et même le publier. </small>
                                        <a href="/pannel/editor?edit=<%=fiche._id%>"></a>

                                    </div>

                                  </div>

                                  <!-- End of modal content -->

                                  <div class="modal-footer">

                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Je ne souhaite pas éditer</button>

                                  </div>
                                </div>
                              </div>
                            </div>

                            <!-- End of Edit Modal -->

                        <!-- End of options -->
                        </div>

                    <!-- End of card body -->
                    </div>

                <!-- End of card -->
                </div>

            </div>

        <!-- End of row -->
        </div>

        <% 
        }
        }); %>

    <!-- End of general container -->
    </div>

    <!-- End of content container -->
</div>


 <%- include('partials/footer.ejs') %>

<script type="text/javascript">
    showNotif("<%=action%>", "<%=parameter1%>", "<%=parameter2%>");
</script>

 

