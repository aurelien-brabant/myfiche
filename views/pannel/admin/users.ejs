<%- include('../partials/header.ejs') %>

<div class="content">

	<div class="container-fluid">

		<div class="row">

			<div class="col-md-12">

				<div class="card ">

					<div class="card-header">

						<h4 class="card-title">
							Utilisateurs
						</h4>
						<div class="table-responsive">
						<table class="table table-striped">
							<thead>
								<tr>
									<th scope="col">UID</th>
									<th scope="col">E-mail</th>
									<th scope="col">Pseudo</th>
									<th scope="col">Derniere connexion</th>
									<th scope="col">creation</th>
									<th scope="col">supprimer</th>
								</tr>
							</thead>
							<tbody>
								<% for (user of users) { %>
								<tr>
									<td><%= user._id %></td>
									<td><a href="/users/<%=user._id%>"><%=user.email%></a></td>
									<td><a href="/users/<%=user._id%>"><%=user.username%></a></td>
									<td><%= user.lastConnexion.toLocaleString() %></td>
									<td><%= user.created.toLocaleString() %></td>
									<td><a class="btn btn-danger btn-sm btn-fill"><i class="fas fa-trash-alt"></i></a></td>
								</tr>
								<% } %>
							</tbody>
						</table>
						</div>


					</div>

				</div>

				<!-- End of card -->
			</div>
		</div>
	</div>
</div>



<%- include('../partials/scripts.ejs') %>
