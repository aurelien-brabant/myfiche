<%- include('partials/header.ejs') %>


<div class="content">
    <div class="container-fluid">
        <div class="text-center my-3">
            <h1 class="">Mes fiches</h1>
            <a href="" class="btn btn-lg btn-success">Créer une fiche</a>
        </div>

        <% fiches.forEach(function(fiche) {

            if (fiche.author.username === user.username)
            {
         %>

        <div class="row">
            <div class="col-md-12">
                <div class="card" id="<%= fiche._id %>">
                    <div class="card-header ">
                    </div>
                    <div class="card-body text-center pb-5 d-flex flex-column flex-lg-row">
                        <div class="col-12 col-lg-4">
                            <img src="<%= fiche.image %>" class="img-fluid" style="max-height: 300px">
                        </div>
                        <div class="col-12 col-lg-5 text-left border">
                            <div class="d-flex flex-column py-2 justify-content-center align-items-center">
                                <div class="col-12">
                                    <h3>Informations</h3>
                                    <p>Titre : <%= fiche.title %></p>
                                    <p>Description : <%= fiche.description %></p>
                                    <p>Contenu (aperçu) : <%= fiche.content.substring(0, 150) %>... <a href="">Voir plus</a></p>
                                </div>                                
                                <div class="col-12 d-flex justify-content-center">
                                    <a class="btn btn-success mx-2">55 <i class="nc-icon nc-stre-up mx-1"></i></a>                      
                                    <a class="btn btn-danger mx-2">3 <i class="nc-icon nc-stre-down mx-1"></i></a>

                                    <a class="btn btn-warning mx-2">95%<i class="nc-icon nc-bulb-63 mx-1"></i></a>    

                                    <a class="btn btn-info mx-2">1034<i class="nc-icon nc-tap-01 mx-1"></i></a>
                                </div>
                                <div class="col-12">
                                    <a class="btn btn-secondary mx-2 my-2 col-12">Voir la fiche <i class="nc-icon nc-stre-right mx-1"></i></a>
                                </div>

                            </div>
                        </div>
                        <div class="col-12 col-lg-3 d-flex flex-column">
                            <h4>Options</h4>


                            <div class="d-flex align-items-center justify-content-center my-2">
                                <span class="mr-2">Visible :</span>

                                <% 
                                var iconClasses = undefined;
                                var btnClasses = undefined;

                                if (fiche.visibility.hidden) 
                                {
                                    iconClasses = "nc-icon nc-simple-remove";
                                    btnClasses = "btn-danger";
                                }
                                else if (!fiche.visibility.hidden)
                                {
                                    iconClasses = "nc-icon nc-check-2";
                                    btnClasses = "btn-success";
                                }
                                %>


                                <a href="/fiches/<%=fiche._id%>/toggleHide?from=myFiches" class="btn <%=btnClasses%> mx-1"><i class="<%= iconClasses %> mx-1"></i></a>
                            </div> 

                            <a href="" class="btn btn-warning my-1">Editer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% 
        }
        }); %>


    </div>
</div>

